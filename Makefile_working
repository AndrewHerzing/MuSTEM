SRC_DIR_f90d1 = Source/
OBJS_DIR = obj/Release/Source/
EXE_DIR = Executables/
CUDA_VER = 9.1

EXE = muSTEM
FC = pgfortran
LD = pgfortran
CFLAGS = -cpp -Dsingle_precision -DGPU -ta=tesla:ccall -ta=tesla:cuda$(CUDA_VER) -Mcuda=cuda$(CUDA_VER) \
          -Mcudalib=cufft $(IDIR) -fast -O3#-Wall -Dsingle_precision -O3 -cpp -mp -J$(OBJS_DIR)
LFLAGS =  $(CFLAGS) -ta=tesla:ccall -ta=tesla:cuda$(CUDA_VER)  -Bstatic_pgi -pgf90libs#-mp #-pgf90libs# -ta=tesla #-Mcudalib=cufft -Mcudalib=cusparse

VPATH = $(SRC_DIR_f90d1):$(OBJS_DIR)
OBJS = $(addprefix $(OBJS_DIR), $(OBJS_f90d1))

all : $(EXE)

$(EXE) : $(OBJS_f90d1)
	@mkdir -p $(EXE_DIR)
	$(LD) -o $(EXE_DIR)$(EXE) $(OBJS) $(LFLAGS) $(LIBS)

$(OBJS_f90d1):
	@mkdir -p $(OBJS_DIR)
	$(FC) $(CFLAGS) -c $(SRC_DIR_f90d1)$(@:.o=.f90) -o $(OBJS_DIR)$@

clean :
	rm -f $(OBJS_DIR)*.*
	rm -f $(EXE_DIR)$(EXE)

